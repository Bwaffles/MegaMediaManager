<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/semantic")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .main.container {
            margin-top: 8em;
        }

        .ui.footer.segment {
            margin: 5em 0em 0em;
            padding: 5em 0em;
        }

        body {
            background-color: whitesmoke;
        }
    </style>
</head>
<body>
    <div class="ui fixed inverted menu" style="height:65px">
        <div class="ui container">
            @Html.ActionLink("MMM", "Index", "Home", null, new { @class = "header item" })
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "item" })
            <div class="right menu">
                @if (@User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink(@CurrentUser.Name, "Details", "User", new { userName = @CurrentUser.Name }, new { @class = "item" })
                    @Html.ActionLink("Log Out", "LogOff", "Auth", null, new { @class = "item" })
                }
                else
                {
                    @Html.ActionLink("Log In", "Login", "Auth", null, new { @class = "item" })
                    @Html.ActionLink("Register", "Register", "Auth", null, new { @class = "item" })
                }
            </div>
        </div>
    </div>
    <div class="ui main container">
        @RenderBody()
    </div>
    <div class="ui inverted vertical footer segment">
        <div class="ui center aligned container">
            <p>&copy; @DateTime.Now.Year - Mega Media Manager</p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/semantic")
    @RenderSection("scripts", required: false)
</body>
</html>
