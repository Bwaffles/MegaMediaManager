@using MegaMediaManager.Mvc.Models
@model MegaMediaManager.Mvc.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<h2 class="ui header">
    <div class="content">@ViewBag.Title</div>
</h2>
<div class="ui middle aligned center aligned grid">
    <div class="column" style="max-width:475px">
        <div class="ui stacked segment">
            <div class="ui form large">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginsListPartialViewModel { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl, CallingAction = ExternalLoginsListPartialViewModel.CallingActionType.Register })
                <div class="ui horizontal divider">
                    OR
                </div>
                @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="fa fa-envelope icon"></i>
                            @Html.TextBoxFor(model => model.Email, new { @name = "Email", @placeholder = @Html.DisplayNameFor(model => model.Email) })
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="fa fa-user icon"></i>
                            @Html.TextBoxFor(model => model.UserName, new { @name = "Username", @placeholder = @Html.DisplayNameFor(model => model.UserName) })
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="fa fa-key icon"></i>
                            @Html.PasswordFor(model => model.PasswordHash, new { @name = "Password", @placeholder = @Html.DisplayNameFor(model => model.PasswordHash) })
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="fa fa-key icon"></i>
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @name = "ConfirmPassword", @placeholder = @Html.DisplayNameFor(model => model.ConfirmPassword) })
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="ui fluid large blue button">Register</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
